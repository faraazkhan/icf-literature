<h3>Assalamu Alaikum</h3>
<% if user_signed_in? %>
  <% if current_user.admin? %>
    <h3>Admin</h3>
    <p><%= link_to 'User count:', users_path %> <%= User.count %></p>
  <% else %>
    <h3>You've signed up. Download a free ebook on Islam.</h3>
    <%= link_to 'Download PDF', products_path('islam.pdf'), class: 'btn btn-success btn-large' %>
  <% end %>
<% else %>
  <h3>Sign up and download a free introductory ebook on Islam.</h3>
  <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-primary btn-large' %>
<% end %>
